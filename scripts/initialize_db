#!/usr/bin/env python


import sys
from pymongo import MongoClient


from relentlessdrv.datastructures import (
    DATABASE_FORMAT, minimal_schemas
)



REQUIRED_FIELDS = list(DATABASE_FORMAT)


client = MongoClient()


for dbfield in REQUIRED_FIELDS:

    newdb = client[dbfield]

    for field in client[dbfield]:

        newdb.create_collection(field)

        newdb[field].insert_one(
            minimal_schemas[field]
        )

